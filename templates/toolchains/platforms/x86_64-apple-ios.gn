ToolchainWithLint("x86_64-apple-ios") {
  toolchain_type = "mac"

  cc = "clang"
  cxx = "clang++"
  ar = "ar"
  ld = cxx

  source_extensions_ld = ["ld"]

  toolchain_args = {
    current_cpu = "x86_64"
    current_os = "ios"
    current_platform = "x86_64-apple-ios"

    ios_deployment_target = "9.0"
  }
}
